<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".dashboard.TransactionsFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="ðŸ§¾"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="40sp"></TextView>
    <TextView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Your transaction's log"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"></TextView>

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvFilterTransactionListExpense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textSize="17sp"
            android:text="Expense"
            android:textColor="@color/black">

        </TextView>

        <TextView
            android:id="@+id/tvFilterTransactionListEarning"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Earning">

        </TextView>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/layoutTransactionList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

        </LinearLayout>

    </ScrollView>


</LinearLayout>