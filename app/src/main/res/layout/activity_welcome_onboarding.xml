<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainLinearLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/LoginTheme"
    tools:context=".welcome.OnboardingActivity">

    <TextView
        android:id="@+id/tvTitleOnboarding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ‘‹"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvSubtitleOnboarding"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Welcome to the onboarding phase. If you want you can set your initial balance"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/etBalance"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:hint="Balance"
        android:textAlignment="center"
        android:inputType="numberDecimal"
        android:layout_marginTop="40dp"
        android:background="@drawable/edittext_rectangle" />

    <Button
        android:id="@+id/btnStartOnboarding"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:background="@drawable/round_button"
        android:clickable="false"
        android:layout_marginTop="40dp"/>

</LinearLayout>