<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".dashboard.PieChartFragment">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/tvFilterDashboardMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Month"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/tvFilterDashboardYear"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:text="Year">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTotalSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Total sum of expenses: "
        android:layout_marginTop="20dp">
    </TextView>

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChartCategories"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:id="@+id/dashboardAdvice"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvAdviceSaving"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Are you a good saver? This is the difference between what you spent and what you earned"/>

    </LinearLayout>

</LinearLayout>