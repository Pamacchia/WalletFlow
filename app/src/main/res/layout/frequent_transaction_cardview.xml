<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="60dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="#ffffffff"
    card_view:strokeColor="#AFAFAF"
    card_view:strokeWidth="1dp"
    card_view:cardElevation="10dp"
    card_view:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/baseline_push_pin_24">

        </Button>

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvFrequentTransactionCardNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvFrequentTransactionCardAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50.45$"
                    android:layout_weight="1"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvFrequentTransactionCardType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Food"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10dp"/>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btFrequentTransactionAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/baseline_autorenew_24"
            android:theme="@style/BlueTheme"
            android:layout_gravity="center">

        </Button>

        <Button
            android:id="@+id/btFrequentTransactionDelete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/baseline_delete_24"
            android:theme="@style/RedTheme"
            android:layout_gravity="center">

        </Button>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
