<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="120dp"
    android:layout_marginVertical="10dp"
    android:backgroundTint="#ffffffff"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="20dp"
    card_view:strokeColor="@color/nordBlue"
    card_view:strokeWidth="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvObjectiveCardTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="Loading Objective.."
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvObjectiveCardParticipants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="" />

        <TextView
            android:id="@+id/tvObjectiveCardProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>